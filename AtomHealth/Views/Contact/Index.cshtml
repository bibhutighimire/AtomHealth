@model AtomHealth.Models.ContactUs
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_LayoutForSubPages.cshtml";
}
<link rel="stylesheet" href="~/css/site.css" />


<h1 style="color:#42a5ff; font-size:24px; font-weight:bold">Contact Form</h1>
<hr />
<p1 style="color:#42a5ff; font-size:16px;">Say hello to us if you do not have any concerns!</p1>
<h1>@ViewBag.Message</h1>
<div class="containerforcontactform">
    <form method="post" style="margin-bottom:55px;">
        <label asp-for="@Model.Name">Full Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Your Full Name..">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>

        <label asp-for="@Model.Email">Email</label>
        <input type="text" id="email" name="email" placeholder="Your Email Address..">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>

        <label asp-for="@Model.Message">Message</label>
        <textarea id="message" name="message" placeholder="Write something.." style="height:200px"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Message"></span>

        <input type="submit" value="Submit">
    </form>
</div>
