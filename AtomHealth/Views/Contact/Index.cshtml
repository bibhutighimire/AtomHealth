<link rel="stylesheet" href="~/css/site.css" />
@model ContactUs
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_LayoutForSubPages.cshtml";
}



<h1 style="color:#42a5ff; font-size:24px; font-weight:bold">Contact Form</h1>
<hr />
<p1 style="color:#42a5ff; font-size:16px;">Say hello to us if you do not have any concerns!</p1>

<div class="containerforcontactform">
    <form method="post" style="margin-bottom:55px;">
        <label asp-for="@Model.FullName">Full Name</label>
        <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Your Full Name..">
        <span class="text-danger" asp-validation-for="@Model.FullName"></span>

        <label asp-for="@Model.Email">Email</label>
        <input type="text" id="email" name="email" placeholder="Your Email Address..">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>

        <label asp-for="@Model.Subject">Subject</label>
        <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
        <span class="text-danger" asp-validation-for="@Model.Subject"></span>

        <input type="submit" value="Submit">
    </form>
</div>
