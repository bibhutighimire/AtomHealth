@model AtomHealth.Models.Atom
    <link rel="stylesheet" href="~/css/site.css" />
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Views/Shared/_LayoutWithoutBanner.cshtml";
}

    <h1 style="color:#42a5ff; font-size:large; font-weight:bold; text-align:center;">Edit Your Profile</h1>
<hr />
<div class="formWrap">
    <div class="col-md-4">
       
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="atomid" />

                <div class="form-group">
                    <label asp-for="firstname" class="control-label"></label>
                    <input  asp-for="firstname" class="form-control" />
                    <span asp-validation-for="firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="middlename" class="control-label"></label>
                    <input asp-for="middlename" class="form-control" />
                    <span asp-validation-for="middlename" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastname" class="control-label"></label>
                    <input asp-for="lastname" class="form-control" />
                    <span asp-validation-for="lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="healthid" class="control-label"></label>
                    <input asp-for="healthid" class="form-control" />
                    <span asp-validation-for="healthid" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="phone" class="control-label"></label>
                    <input asp-for="phone" class="form-control" />
                    <span asp-validation-for="phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="sex" class="control-label">Gender</label>
                    <br />
                    <input checked="checked"
                           id="sex"
                           name="sex"
                           type="radio"
                           value="Male" /> Male

                    <input id="sex"
                           name="sex"
                           type="radio"
                           value="Female" />  Female
                    <input id="sex"
                           name="sex"
                           type="radio"
                           value="Others" /> Others
                    <span asp-validation-for="sex" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="height" class="control-label"></label>
                    <input asp-for="height" class="form-control" />
                    <span asp-validation-for="height" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="weight" class="control-label"></label>
                    <input asp-for="weight" class="form-control" />
                    <span asp-validation-for="weight" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="ismarried" class="control-label">Status</label>
                    <br />
                    <input checked="checked"
                           id="ismarried"
                           name="ismarried"
                           type="radio"
                           value="Married" /> Married

                    <input id="ismarried"
                           name="ismarried"
                           type="radio"
                           value="Unmarried" />  Unmarried
                    <input id="ismarried"
                           name="ismarried"
                           type="radio"
                           value="Divorced" /> Divorced
                    <input id="ismarried"
                           name="ismarried"
                           type="radio"
                           value="Widowed" /> Widowed
                    <span asp-validation-for="ismarried" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="emergencyphone" class="control-label"></label>
                    <input asp-for="emergencyphone" class="form-control" />
                    <span asp-validation-for="emergencyphone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="relationship" class="control-label"></label>
                    <input asp-for="relationship" class="form-control" />
                    <span asp-validation-for="relationship" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="inmedicationnow" class="control-label">In Medication Now?</label>
                    <br />
                    <input checked="checked"
                           id="inmedicationnow"
                           name="inmedicationnow"
                           type="radio"
                           value="Yes" /> Yes

                    <input id="inmedicationnow"
                           name="inmedicationnow"
                           type="radio"
                           value="No" />  No
                    <span asp-validation-for="inmedicationnow" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="medication" class="control-label"></label>
                    <input asp-for="medication" class="form-control" />
                    <span asp-validation-for="medication" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="dob" class="control-label"></label>
                    <input asp-for="dob" class="form-control" />
                    <span asp-validation-for="dob" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="diseases" class="control-label"></label>
                    <input asp-for="diseases" class="form-control" />
                    <span asp-validation-for="diseases" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    
    </div>
</div>

<div>
    <a asp-route-id="@ViewBag.atomid" asp-action="Profile">Back to List</a>
</div>

