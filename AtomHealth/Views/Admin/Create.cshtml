@model AtomHealth.Models.Admin
    <link rel="stylesheet" href="~/css/site.css" />
    @{
        ViewData["Title"] = "Create";
        Layout = "~/Views/Shared/_LayoutWithoutBanner.cshtml";
    }

<h1 style="color:#42a5ff; font-size:large; font-weight:bold">Add New Admin</h1>

  
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (ViewBag.Success != null)
            {
                <p>@ViewBag.Success</p>
            }

            <form asp-action="AddNewAdmin">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    Email Address
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    Password
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Admin" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
