<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home Page</title>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/accordion.css" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @*<environment include="Development">*@

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    @*</environment>*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" alt="logoimage" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <div class="topNav">
                        <div class="signInAndSocial">
                            <div class="socialMedia">
                                <a href="https://www.linkedin.com/" target="_blank"><img src="~/images/linkedin.png" style="width:30px; height:30px; margin-right:10px;" /></a>
                                <a href="https://www.facebook.com/" target="_blank"><img src="~/images/facebook.png" style="width:30px; height:30px;margin-right:10px;" /></a>
                                <a href="https://www.instagram.com/" target="_blank"><img src="~/images/instagram.png" style="width:30px; height:30px;margin-right:10px;" /></a>
                                <a href="https://www.twitter.com/" target="_blank"><img src="~/images/twitter.png" style="width:30px; height:30px" /></a>
                            </div>

                        </div>
                        <div class="navLinks">
                            @*Visitor Login*@
                            @if (ViewBag.positionid == null)
                            {

                                <div class="signinoutLink">
                                    <a style="padding-right:10px; border-right: 2px solid #42a5ff;" asp-controller="SignupAtom" asp-action="Signin">Signin   </a>
                                    <a style="padding-left:10px;" asp-controller="SignupAtom" asp-action="CreateForUserWhoNeedHelp">Signup</a>
                                </div>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="OurSolution" asp-action="Index">OUR SOLUTION</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Subscribe" asp-action="Create">JOIN US</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="FAQ" asp-action="Index">FAQ</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Contact" asp-action="Index">CONTACT US</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="News" asp-action="Index">HEALTH NEWS</a>
                                    </li>


                                </ul>
                            }

                            @*Admin Login*@
                            @if (ViewBag.positionid == "1")
                            {
                        <div class="signinoutLink">
                            <p style="color:#42a5ff; font-size:14px; font-weight:bold; padding-right:10px;">Hi  @ViewBag.firstname!</p>
                            <a style="color:white; background-color:#42a5ff;     padding: 13px 13px 30px 13px; font-size:14px;" asp-controller="SignupAtom" asp-action="Signout">Signout</a>
                        </div>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="OurSolution" asp-action="Index">OUR SOLUTION</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="SignupAtom" asp-action="Index">Show all Patient Data</a>
                                    </li>
                                </ul>


                            }
                            @*Employee Login with Position ID: 2*@

                            @if (ViewBag.positionid == "2")
                            {
                        <div class="signinoutLink">
                            <p style="color:#42a5ff; font-size:14px; font-weight:bold; padding-right:10px;">Hi  @ViewBag.firstname!</p>
                            <a style="color:white; background-color:#42a5ff;     padding: 13px 13px 30px 13px; font-size:14px;" asp-controller="SignupAtom" asp-action="Signout">Signout</a>
                        </div>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="OurSolution" asp-action="Index">OUR SOLUTION</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="SignupAtom" asp-action="Index">Show all Patient Data</a>
                                    </li>
                                </ul>

                            }
                            @*Patient Login with Position ID: 4*@
                            @if (ViewBag.positionid == "4")
                            {
                        <div class="signinoutLink">
                            <p style="color:#42a5ff; font-size:14px; font-weight:bold; padding-right:10px;">Hi  @ViewBag.firstname!</p>
                            <a style="color:white; background-color:#42a5ff;     padding: 13px 13px 30px 13px; font-size:14px;" asp-controller="SignupAtom" asp-action="Signout">Signout</a>
                        </div>
                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="OurSolution" asp-action="Index">OUR SOLUTION</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Atom" asp-route-id="@ViewBag.atomid" asp-action="Profile">View Your Profile</a>
                                    </li>
                                </ul>

                            }


                        </div>

                            </div>



                        </div>
                    </div>
                </nav>
            </header>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted">
                <div class="containerFooter">
            &copy; 2020 - AtomHealth - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                </div>
            </footer>
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @RenderSection("Scripts", required: false)
        </body>

        </html>

